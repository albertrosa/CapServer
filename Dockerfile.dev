FROM node:16

# Set the working directory inside the container
WORKDIR /app

# Copy only package.json first for efficient dependency installation
COPY package*.json ./

# Install all dependencies, including devDependencies like nodemon
RUN npm install

RUN npm install -g nodemon

# Copy the rest of the application code
COPY . .

# Expose ports used by your application (you can adjust based on your needs)
EXPOSE 3000
EXPOSE 8080
EXPOSE 80

# Set environment to development (optional but helpful for conditional logic)
ENV NODE_ENV=development

# Command to start the server using nodemon for hot-reloading
CMD ["nodemon", "app.js"]

# Optional: Allow running a shell inside the container
# CMD ["sh"]