FROM node:20

# Set the working directory inside the container
WORKDIR /app

# Install bash and other useful tools for interactive use
RUN apt-get update && apt-get install -y \
    bash \
    curl \
    git \
    vim \
    nano \
    && rm -rf /var/lib/apt/lists/*

# Copy only package.json first for efficient dependency installation
COPY package*.json ./

# Install all dependencies, including devDependencies like nodemon
RUN npm install

RUN npm install -g nodemon

# Copy the rest of the application code
COPY . .

# Expose ports used by your application (you can adjust based on your needs)
EXPOSE 3000
EXPOSE 8080
EXPOSE 80

# Set environment to development (optional but helpful for conditional logic)
ENV NODE_ENV=development

# Create a startup script that can handle both interactive and non-interactive modes
RUN echo '#!/bin/bash\n\
if [ "$1" = "shell" ]; then\n\
    exec /bin/bash\n\
elif [ "$1" = "test" ]; then\n\
    exec npm test\n\
elif [ "$1" = "dev" ]; then\n\
    exec nodemon app.js\n\
else\n\
    exec nodemon app.js\n\
fi' > /app/entrypoint.sh && chmod +x /app/entrypoint.sh

# Use the startup script as the entrypoint
ENTRYPOINT ["/app/entrypoint.sh"]

# Command to start the server using nodemon for hot-reloading
CMD ["nodemon", "app.js"]